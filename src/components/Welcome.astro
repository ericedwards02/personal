---
import background from "../assets/background.svg";
---

<div id="container" class="h-full">
    <img
        id="background"
        class="fixed top-0 left-0 w-full h-full -z-1 blur-[100px]"
        src={background.src}
        alt=""
        fetchpriority="high"
    />
    <main class="h-full flex justify-center">
        <section id="hero" class="flex flex-col items-start justify-center p-4">
            <h1>making changes! come back later :)</h1>
            <section id="links">
                <a id="github" href="https://github.com/ericedwards02">github</a
                >
                <a
                    id="linkedin"
                    href="https://www.linkedin.com/in/ericedwards02/"
                    >linkedin</a
                >
            </section>
        </section>
    </main>
</div>

<style>
    h1 {
        font-size: 22px;
        margin-top: 0.25em;
    }

    #links {
        display: flex;
        gap: 16px;
    }

    #links a {
        display: flex;
        align-items: center;
        padding: 10px 12px;
        color: #111827;
        text-decoration: none;
        transition: color 0.2s;
    }

    #links a:hover {
        color: rgb(78, 80, 86);
    }
</style>
